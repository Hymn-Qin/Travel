<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.lanou.project.chanyouji.ToolActivity.ToolMapActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <LinearLayout
            android:id="@+id/lin_scenic_spot"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/blue_top"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back_image3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="5dp"
                android:src="@mipmap/arrow_right_normal" />

            <ImageView
                android:id="@+id/chan_image3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                android:src="@mipmap/log_a" />

            <TextView
                android:id="@+id/title_text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="马来西亚"
                android:textColor="#f5fbfe"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/title_text4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="旅行地图"
                android:textColor="#f5fbfe"
                android:textSize="18sp" />
        </LinearLayout>


    </RelativeLayout>
    <com.baidu.mapapi.map.MapView
    android:id="@+id/bMapView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    >

</com.baidu.mapapi.map.MapView>
</LinearLayout>
