<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/top_10dp"
    tools:context="com.lanou.project.chanyouji.RaidersActivity.CityTravelListItemActivity">

    <TextView
        android:id="@+id/travel_item_child_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="实用贴士"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/top_5dp"
        android:lineSpacingMultiplier="1.2"
        android:textSize="@dimen/text_15sp"
        android:layout_marginLeft="@dimen/top_10dp"/>
    <HorizontalScrollView
        android:id="@+id/travel_item_child_HSV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/top_10dp">

        <LinearLayout
            android:id="@+id/travel_item_child_LY_HSV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        </LinearLayout>


    </HorizontalScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/top_10dp">
        <TextView
            android:id="@+id/travel_item_child_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="作者"
            android:textSize="@dimen/text_12sp"
            android:textColor="@color/hui"
            />
        <TextView
            android:id="@+id/travel_item_child_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="时间"
            android:textSize="@dimen/text_12sp"
            android:textColor="@color/hui"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/hui"/>
</LinearLayout>
