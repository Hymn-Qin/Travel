<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="232dp"
    android:layout_height="232dp"
    android:padding="2dp">

    <ImageView
        android:id="@+id/country_image"
        android:layout_width="232dp"
        android:layout_height="232dp"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/country_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="泰国"
        android:textColor="#ffffff"
        android:textSize="@dimen/text_15sp"
        android:layout_marginLeft="@dimen/top_10dp"
        android:layout_marginTop="@dimen/top_10dp"/>

    <TextView
        android:id="@+id/country_abc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/country_text"
        android:text="THAILAND"
        android:textColor="#ffffff"
        android:textSize="@dimen/text_10sp"
        android:layout_marginLeft="@dimen/top_10dp"/>

    <TextView
        android:id="@+id/country_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@id/country_image"
        android:layout_marginBottom="@dimen/top_10dp"
        android:background="@color/black"
        android:text="572路星弟"
        android:textColor="#ffffff"
        android:textSize="@dimen/text_10sp" />

</RelativeLayout>