<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lin_scenic_spot"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/blue_top"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back_scenic_apot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="5dp"
            android:src="@mipmap/arrow_right_normal" />

        <ImageView
            android:id="@+id/iv_chan_scenic_spot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:src="@mipmap/log_a" />

        <TextView
            android:id="@+id/tv_title_scenic_spot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="实时汇率"
            android:textColor="#fefefe"
            android:textSize="18sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_rate_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:background="@mipmap/jp" />

        <TextView
            android:id="@+id/tv_zimu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="JPY"
            android:textColor="#222222"
            android:textSize="22sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_random"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@null"
                android:gravity="right|center_vertical"
                android:hint="0.00"
                android:maxLength="8"
                android:textColor="#222222" />

            <TextView
                android:id="@+id/tv_rate_money"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="right|center_horizontal"
                android:text="日元"
                android:textColor="#222222" />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:background="@mipmap/china" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="CNY"
            android:textColor="#222222"
            android:textSize="22sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_rmb"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@null"
                android:gravity="right|center_vertical"
                android:hint="0.00"
                android:maxLength="8"
                android:textColor="#222222" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="right|center_horizontal"
                android:text="人民币"
                android:textColor="#222222" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:background="@mipmap/unitedstates" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="USD"
            android:textColor="#222222"
            android:textSize="22sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_dollers"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@null"
                android:gravity="right|center_vertical"
                android:hint="0.00"
                android:maxLength="8"
                android:textColor="#222222" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="right|center_horizontal"
                android:text="美元"
                android:textColor="#222222" />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:background="@mipmap/europe" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="EUR"
            android:textColor="#222222"
            android:textSize="22sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_yingbang"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@null"
                android:gravity="right|center_vertical"
                android:hint="0.00"
                android:maxLength="8"
                android:textColor="#222222" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="right|center_horizontal"
                android:text="欧元"

                android:textColor="#222222" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>