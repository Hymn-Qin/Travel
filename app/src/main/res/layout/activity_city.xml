<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.lanou.project.chanyouji.ToolActivity.CityActivity">
  <LinearLayout
      android:id="@+id/lin_scenic_spot"
      android:layout_width="match_parent"
      android:layout_height="40dp"
      android:background="@color/blue_top"
      android:orientation="horizontal">

    <ImageView
        android:id="@+id/back_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center_vertical"
        android:layout_marginLeft="5dp"
        android:src="@mipmap/arrow_right_normal" />

    <ImageView
        android:id="@+id/chan_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="5dp"
        android:src="@mipmap/log_a" />

    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="选择目的地"
        android:textColor="#ffffff"
        android:textSize="18sp" />
  </LinearLayout>
  <android.support.design.widget.TabLayout
      android:id="@+id/city_table"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/white"
      app:tabIndicatorColor="@color/blue_top"
      app:tabSelectedTextColor="@color/blue_top">
  </android.support.design.widget.TabLayout>
  <android.support.v4.view.ViewPager
      android:id="@+id/city_View"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1">
  </android.support.v4.view.ViewPager>
</LinearLayout>
